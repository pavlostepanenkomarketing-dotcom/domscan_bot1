import os
from telegram.ext import Updater, CommandHandler
from evaluator import evaluate_domain

TELEGRAM_TOKEN = os.getenv("TELEGRAM_TOKEN")

def start(update, context):
    update.message.reply_text("üëã –ü—Ä–∏–≤–µ—Ç! –û—Ç–ø—Ä–∞–≤—å –¥–æ–º–µ–Ω, –∏ —è –ø—Ä–æ–≤–µ—Ä—é –µ–≥–æ —Å—Ç–æ–∏–º–æ—Å—Ç—å.")

def check_domain(update, context):
    domain = " ".join(context.args)
    if not domain:
        update.message.reply_text("‚ùó –ù–∞–ø–∏—à–∏ –¥–æ–º–µ–Ω, –ø—Ä–∏–º–µ—Ä:\n/check google.com")
        return

    update.message.reply_text("‚è≥ –ü—Ä–æ–≤–µ—Ä—è—é...")

    price = evaluate_domain(domain)
    update.message.reply_text(f"üí° –†–µ–∑—É–ª—å—Ç–∞—Ç: {price}")

def main():
    updater = Updater(TELEGRAM_TOKEN, use_context=True)
    dp = updater.dispatcher

    dp.add_handler(CommandHandler("start", start))
    dp.add_handler(CommandHandler("check", check_domain))

    updater.start_polling()
    updater.idle()

if __name__ == "__main__":
    main()
