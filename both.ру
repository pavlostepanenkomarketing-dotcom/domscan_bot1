import logging
from telegram.ext import Updater, CommandHandler
from evaluator import evaluate_domain

logging.basicConfig(level=logging.INFO)

def start(update, context):
    update.message.reply_text("üëã –ü—Ä–∏–≤–µ—Ç! –û—Ç–ø—Ä–∞–≤—å –¥–æ–º–µ–Ω, –∏ —è –ø—Ä–æ–≤–µ—Ä—é –µ–≥–æ —Å—Ç–æ–∏–º–æ—Å—Ç—å.")

def check(update, context):
    domain = update.message.text.strip()
    price = evaluate_domain(domain)
    update.message.reply_text(f"üí∞ –ü—Ä–∏–º–µ—Ä–Ω–∞—è —Å—Ç–æ–∏–º–æ—Å—Ç—å {domain}: {price} ‚Ç¨")

def main():
    import os
    TOKEN = os.getenv("TELEGRAM_TOKEN")

    updater = Updater(TOKEN, use_context=True)
    dp = updater.dispatcher

    dp.add_handler(CommandHandler("start", start))
    dp.add_handler(CommandHandler("help", start))

    dp.add_handler(CommandHandler("check", check))

    updater.start_polling()
    updater.idle()

if __name__ == "__main__":
    main()
